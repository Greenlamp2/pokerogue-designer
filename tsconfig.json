{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "paths": {
        "#enums/*": ["./node_modules/pokerogue/src/enums/*.ts"],
        "#app/*": ["./node_modules/pokerogue/src/*.ts"],
        "#app": ["./node_modules/pokerogue/src/"],
        "#test/*": ["./node_modules/pokerogue/src/test/*.ts"],
    }
  },
  "include": ["src"]
}